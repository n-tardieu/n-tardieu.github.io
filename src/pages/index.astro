<style>
	.container {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		max-width: 800px;
		margin: 0 auto;
		transform: translateY(-5vh);
	}

	.content {
		width: 100%;
		max-width: 600px;
		animation: fadeInUp 0.8s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.name {
		font-size: 2.5rem;
		font-weight: 600;
		margin: 0 0 1.5rem 0;
		color: #ffffff;
		background: linear-gradient(135deg, #ffffff, #ff9a9e, #fad0c4);
		background-size: 200% 200%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: textShimmer 3s ease-in-out infinite alternate;
	}

	@keyframes textShimmer {
		0% {
			background-position: 0% 50%;
		}
		100% {
			background-position: 100% 50%;
		}
	}

	.bio {
		font-size: 1.125rem;
		margin-bottom: 2rem;
		color: #ffffff;
		animation: fadeInUp 0.8s ease-out 0.2s both;
	}

	.bio p {
		margin: 0 0 1rem 0;
	}

	.bio p:last-child {
		margin-bottom: 0;
	}

	.skills {
		margin-bottom: 2.5rem;
		animation: fadeInUp 0.8s ease-out 0.3s both;
	}

	.skills h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		color: #ffffff;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		padding: 0.4rem 0.8rem;
		background: rgba(255, 154, 158, 0.15);
		border: 1px solid rgba(255, 154, 158, 0.3);
		border-radius: 20px;
		font-size: 0.875rem;
		color: #ff9a9e;
		transition: all 0.3s ease;
	}

	.tag:hover {
		background: rgba(255, 154, 158, 0.25);
		border-color: #ff9a9e;
		transform: translateY(-1px);
	}

	.bio a {
		color: #ff9a9e;
		font-weight: 500;
		border-bottom: 1px solid #ff9a9e;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.bio a:hover {
		color: #fad0c4;
		border-bottom-color: #fad0c4;
		opacity: 1;
		text-decoration: none;
		transform: translateY(-1px);
	}

	.links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		animation: fadeInUp 0.8s ease-out 0.5s both;
	}

	.link {
		font-size: 1rem;
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		border: 1px solid #444;
		border-radius: 6px;
		transition: all 0.3s ease;
		text-decoration: none;
		display: inline-block;
		color: #ffffff;
		backdrop-filter: blur(10px);
		background: rgba(255, 255, 255, 0.05);
	}

	.github-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.github-icon {
		width: 20px;
		height: 20px;
		flex-shrink: 0;
	}

	.link:hover {
		border-color: #ff9a9e;
		text-decoration: none;
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(255, 154, 158, 0.2);
		background: rgba(255, 154, 158, 0.1);
	}

	.button {
		background: linear-gradient(135deg, #ff9a9e, #fad0c4);
		color: #000000;
		border-color: transparent;
	}

	.button:hover {
		background: linear-gradient(135deg, #fad0c4, #ff9a9e);
		border-color: transparent;
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(255, 154, 158, 0.3);
	}

	@media (max-width: 768px) {
		.container {
			padding: 1.5rem;
			transform: translateY(-3vh);
		}

		.name {
			font-size: 2rem;
		}

		.bio {
			font-size: 1rem;
		}

		.links {
			flex-direction: column;
		}

		.link {
			text-align: center;
		}

		.github-link {
			justify-content: center;
		}
	}
</style>
